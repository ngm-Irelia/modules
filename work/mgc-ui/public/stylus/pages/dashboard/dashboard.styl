//模板C
.dashboard_template_c{
	height:100%;
	width:100%;
	display:none;

  .c_gis, .c_chart_a, .c_chart_b, .c_chart_c, .c_chart_d, .c_chart_e, .c_chart_f, .c_chart_g, .c_chart_h{
  	width:23%;
    height:25%;
  	overflow-x: auto;
    overflow-y: hidden;
    cursor:pointer;
    background-color: $dashboard-color-svg-backaground;
    position:absolute;
  }

  .c_gis{
    top: 10%;
    left: 4%;
    width: 40%;
    height: 55%;
    background-color: $dashboard-color-background-gis;

    &:hover{
      box-shadow:3px 4px 3px 1px  $dashboard-color-shadow-box-gis ;
    }

  }

  .c_gis_title{
    position absolute;
    top:5%;
    left:7%;
    transform:rotateZ(0deg);
    // color:#fff;
    width:190px;

    .klam {
      position: absolute;
      top: 0px;
      left: 0px;
      color: $dashboard-color-AnimationText;
      z-index: 1;
      animation: shadow 4.0s ease-in-out 3;
      font-size 20px;
      text-shadow: 2px 1px 2px $dashboard-color-AnimationText;
    }
    
    @-webkit-keyframes noor {
      0% {left: 0px;}
      50% {left: 50px;}
      75%{left:120px;}
      100% {left: 140px;}
    }
    
    @-webkit-keyframes shadow {
      0% {text-shadow: -9px 1px 4px $dashboard-color-AnimationText;}
      50% {text-shadow: 9px 1px 4px $dashboard-color-AnimationText; }
      100% {text-shadow: -9px 1px 4px $dashboard-color-AnimationText;}    
    }

    .noor {
      position: absolute;
      top: 0px;
      left: -10px;
      width: 25px;
      height: 25px;
      opacity: 0.8;
      border-radius: 25px;
      z-index: 0;
      background: 
      -webkit-radial-gradient(center, ellipse cover, $dashboard-color-AnimationCircleA  0%, $dashboard-color-AnimationCircleB 100%); 
      box-shadow: 0px 0px 40px $dashboard-color-shadow-AnimationCircle;
      animation: noor 3.0s ease-in-out 1;
    }

    .two {z-index: 2;opacity: 0.8;}

  }

  .c_chart_a:hover, .c_chart_b:hover, .c_chart_c:hover, .c_chart_d:hover,
  .c_chart_e:hover, .c_chart_f:hover, .c_chart_g:hover, .c_chart_h:hover{
    transform: scale(1.12);
  }

  .c_chart_a{
  	top:10%
  	left:48%;
    box-shadow: 2px 2px 7px 2px $dashboard-color-shadow-box;
  }
  .c_chart_b{
  	top:10%
  	left:73%;
    box-shadow: 2px 2px 7px 2px $dashboard-color-shadow-box;
  }
  .c_chart_c{
  	top:40%
  	left:48%;
    box-shadow: 2px 2px 7px 2px $dashboard-color-shadow-box;
  }
  .c_chart_d{
  	top:40%
  	left:73%;
    box-shadow: 2px 2px 7px 2px $dashboard-color-shadow-box;
  }
  .c_chart_e{
  	top:70%;
  	left:48%;
    box-shadow: 2px 2px 7px 2px $dashboard-color-shadow-box;
  }
  .c_chart_f{
  	top:70%;
  	left:73%;
    box-shadow: 2px 2px 7px 2px $dashboard-color-shadow-box;
  }

  .c_textbox{
    position absolute
    top: 70%;
    left: 4%;
    width: 40%;
    height: 25%;
    font-size:14px;
    padding:10px;
  
    p{
      width: 230px;
      height: 27px;
      line-height: 27px;
      
      &:hover{
        background-color :linear-gradient(to right, $dashboard-color-AnimationText 0%, #fff 100%);
      }
  
      .c_stat_name{
        display inline-block
        height 27px;
        width:70px;
        margin:0px 10px;
        color:$dashboard-color-text;
        text-align: right;
        font-weight bold
      }
      
      .c_stat_result{
        display inline-block
        height 27px;
        width:120px;
        margin:0px 10px;
        color:$dashboard-color-text;
        font-weight bold
      }
  
    }
  
  }

}


