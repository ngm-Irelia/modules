.makelink_box {
  margin-bottom: 8px;
}

.makelink_box .selectParent_elemnt_box{
  background-color: $input-color-background;
}

.makelink_box h5 {
  line-height: 24px;
  font-size: 16px;
  color: $font-color-highlight;
}

.select_box {
  margin: 10px 0 12px 0;
}

#relate_name_box {
  user-select: none;
}

#relate_name_one,
#relate_name_two {
  display: inline-block;
  width: 100px;
  text-align: center;
  line-height: 25px;
  color: $input-color-text;
}

#relate_direction {
  display: inline-block;
  width: 54px;
  height: 25px;
  vertical-align: middle;
  cursor: pointer;
  font-size: 25px;
}

.clandar_box {
  position: relative;
  display: inline-block;
}

.clandar_box:nth-child( 1 ) {
  margin-left: 0;
}

#relate_time,
#relate_medium {
  width: 256px;
  line-height: 25px;
  text-indent: 8px;
  outline: none;
  background-color: $input-color-background;
  border: 1px solid $input-color-border;
}

#relate_medium {
  margin-top: 6px;
}

#relate_start {
  position: absolute;
  top: 3px;
  right: 3px;
  width: 20px;
  height: 20px;
  border: none;
  outline: none;
  background-color: $input-color-background;
  font-size: 16px;
  padding: 0;
}

#makelink_opt {
  width: 150px;
  margin-top: 10px;
  float: right;
}

#makelink_ensure,
#makelink_cancel {
  width: 60px;
  height: 24px;
  outline: none;
  font-size: 12px;
}

#makelink_ensure {
  border: 1px $button-color-border-sure solid;
  margin-right: 12px;
  background-color: $button-color-background-sure;
  color: $button-color-text;
}

#makelink_ensure:hover {
  background-color: $button-color-background-sure-hover;
}

#makelink_cancel {
  border: 1px $button-color-border-cancel solid;
  color: $button-color-text;
  background-color: $button-color-background-cancel;
}

#makelink_cancel:hover {
  background-color: $button-color-background-cancel-hover;
}

.name_entity_title {
  display: inline-block;
  height: 24px;
  margin: 4px 12px;
  padding: 0 16px;
  line-height: 23px;
  border-radius: 12px;
  border: 1px $tabs-item-color-border solid;
  cursor: pointer;
}

.name_entity_title_active {
  /*background-color: #33d0ff;*/
  border-color: $tabs-item-color-border-active;
  color: $font-color-highlight;
}

.name_entity_content_box {
  display: none;
  border: 1px $border-color solid;
  margin-top: 8px;
  padding: 10px;
  border-radius: 2px;
}

.name_entity_content_active {
  display: block;
}

.name_entity_content_list {
  margin: 0 8px;
  display: inline-block;
}

/* 移除js中颜色样式 */
.document_pagealert_notice_color_default {
  color: $font-color-highlight;
}

.document_pagealert_notice_color_license {
  color: $font-color-warning;
}

.document_btn_relate_default{
  border: 1px $button-color-border-cancel solid;
}
.document_btn_relate_disabled{
  background-color: $alert-color-background;
  cursor: auto;
}
.document_btn_relate_active{
  border: 1px $button-color-border-sure solid;
}
.document_btn_relate_hover{
  background-color: $button-color-background-sure-hover ;
  cursor: pointer;
}
.document_make_type_color{
  color: $input-color-text;
}
.document_add_property_type_color{
  color: $font-color;
}
.document_make_relate_type_color{
  color: $input-color-text;
}


.entity_btn_create_default{
  border: 1px solid $button-color-border-sure;
  background-color: $alert-color-background;
}
.entity_btn_cancel_default{
  border: 1px $button-color-border-cancel solid;
  background-color: $alert-color-background;
}