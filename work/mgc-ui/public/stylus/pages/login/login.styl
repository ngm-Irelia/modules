@import "../public/component";

body {
  background: url('../../../image/login_back.png') no-repeat 0 0 / 100% 100%;
}

#login_warning {
  height: 24px;
  text-align: center;
  font-size: 14px;
  color: $font-color-warning;
}

#index_main {
  position: absolute;
  top: 50%;
  left: 50%;
  width: 600px;
  height: 500px;
  margin: -250px 0 0 -300px;
  overflow: hidden;
}

#index_main_logo {
  position: relative;
  width: 125px;
  height: 144px;
  margin: 0 auto;

  img {
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    width: 100%;
  }

}

#index_main_title {
  width: 100%;
  color: $font-index-color;
  font-size: 24px;
  font-weight: bold;
  line-height: 60px;
  text-align: center;
}

#index_login {
  position: relative;
  width: 360px;
  height: 185px;
  margin: 0 auto;
  padding-top: 120px;
}

#index_login_input {
  position: absolute;
  top: 0;
  left: 30px;
  border: 2px $input-color-login-border solid;
  border-radius: 10px;
  width: 300px;
  height: 100px;
  overflow: hidden;
  z-index: 1;
}

.index_text {
  width: 100%;
  height: 48px;
  line-height: 48px;
  font-size: 24px;
  padding-left: 10px;
}

#index_login_input .index_text:nth-child(1) {
  border-bottom: 1px $input-color-login-border solid;
}

#home_user,
#home_pwd {
  border: none;
  outline: none;
  width: 250px;
  height: 46px;
  font-size: 18px;
  text-align: center;
  color: $font-index-color;
  background: transparent;
}

.index_button {
  width: 190px;
  margin: 20px auto;
  text-align: center;
  font-size: 42px;
  color: $font-index-color;
}

#index_login_btn {
  width: 185px;
  height: 45px;
  border: none;
  outline: none;
  font-size: 20px;
  cursor: pointer;
  color: $font-color;
  opacity: 0;
}

.index_position {
  font-size: 182px;
  position: absolute;
  top: 35%;
  left: 75.5%;
}

.index_font {
  font-size: 18px;
  position: absolute;
  top: 79%;
  left: 44%;
}

.icon-index-btn .path1 {
  left: 25%;
}

#_selectBar {
  position: absolute;
  right: 0;
  top: 0;
}
