#entity-main{
  position: absolute;
  top: 20px;
  left: 0;
  right: 0;
  bottom: 0;
  display: flex;
  user-select: text;
  -moz-user-select: text;
  -webkit-user-select: text;
  -ms-user-select: text;

  #entity-info{
    width: 33%;
    height: 100%;
    border-right: 4px solid $enyity-color-section-border;

    .entity-title{
      position: relative;
      width: 100%;
      height: 28%;
      padding: 5% 20%;

      h4{
        position: absolute;
        top: 7%;
        left: 15%;
        transform: translate(-50%, 0);
        font-size: 16px;
        color: $font-color-highlight;
      }
      img{
        position: absolute;
        top: 5%;
        left: 15%;
        transform: translate(-50%, 0);
        width: 22%;
      }
      img:nth-last-of-type(1){
        position: absolute;
        top: 40%;
        left: 50%;
        transform: translate(-50%, 0);
        width: 20%;
        border-radius: 50%;
      }
      .entity-oprate{
        position absolute;
        right: 5%;
        bottom: 5%;

        button{
          font-size: 18px;
          border: none;
          background: none;
          width:30px;
        }
        
        //gis和拓扑toolTip
        .tipStyle{
          height: 17px;
          line-height: 16px;
          padding-left: 3px;
          padding-right: 3px;
          position: absolute;
          font-size: 12px;
          text-align: center;
          background-color: $totip-tool-color-background;
          color: black;
          top:25px;
          z-index:2;
        }
      }
    }
    .entity-content{
      position: relative;
      height: 36%;

      .title-tabs{
        display: flex;
        padding: 0 10px;
        margin: -2px 0;

        p{
          height: 28px;
          line-height: 28px;
          color: $tabs-item-color-text;
          text-align: center;
          padding: 0 10px;
          cursor: pointer;
        }
        .tab-active{
          line-height: 24px;
          border: 2px solid $tabs-item-vision-color-border;
          border-top: 2px solid $tabs-item-color-border-active;
          border-bottom: none;
          background: $tabs-item-color-background-active;
          color: $tabs-item-color-text-acitve;
          cursor: default;
        }
      }
      .tab-content{
        height: 93%;
        border: 2px solid $tabs-item-vision-color-border;
        margin: 0 10px 10px 10px;
        padding: 10px;

        table{
          tbody{
            tr{
              &:nth-child(odd){
                background: $table-color-background-row-odd;
              }
              td{
                text-align: left;
                text-indent: 30px;
                min-height: 28px;
                line-height: 28px;
                border-bottom: 1px solid $table-color-border;

                &:nth-of-type(1){
                  width: 40%;
                }
                &:nth-of-type(2){
                  width: 60%;
                }
              }
              .link{
                text-decoration: underline;
                cursor: pointer;

                &:hover{
                  color: $font-color-highlight;
                }
              }
            }
            .no-data{
              display: flex;
              justify-content: center;
              align-items: center;
              flex-direction: column;
              width: 100%;
              height: 100%;

              .icon-notfind{
                font-size: 80px;
              }
              p{
                font-size: 14px;
                margin: 10px 0;
              }
            }
          }
        }
      }
      
      .table-max{

        tbody{
          display: block;
          height: 18em;
          overflow-y: auto;
          tr{
            display: table;
            width: 100%;
            table-layout: fixed;
          }
        }
      }

      .more{
        position: absolute;
        left: 0;
        display: flex;
        justify-content: center;
        align-items: center;
        width: 100%;
        height: 8%;
        z-index: 99;

        .icon-arrow-double-top{
          font-size: 14px;
          cursor: pointer;
        }
      }
      .slide-down{
        animation: slide-down ease-out 0.2s;
        animation-fill-mode: forwards;
        -webkit-animation: slide-down ease-out 0.2s;
        -webkit-animation-fill-mode: forwards;

        @keyframes slide-down
        {
          from {transform: rotateX(0deg)}
          to {
            // bottom: 0px;
            transform: rotateX(180deg);
          }
        }

        @-webkit-keyframes slide-down /*Safari and Chrome*/
        {
          from {transform: rotateX(0deg)}
          to {
            // bottom: 0px;
            transform: rotateX(180deg);
          }
        }
      }
      .slide-top{
        animation: slide-top ease-out 0.2s;
        animation-fill-mode: forwards;
        -webkit-animation: slide-top ease-out 0.2s;
        -webkit-animation-fill-mode: forwards;

        @keyframes slide-top
        {
          from {
            transform: rotateX(180deg);
          }
          to {
            transform: rotateX(0deg);
          }
        }

        @-webkit-keyframes slide-top /*Safari and Chrome*/
        {
          from {
            transform: rotateX(180deg);
          }
          to {
            transform: rotateX(0deg);
          }
        }
      }
    }
