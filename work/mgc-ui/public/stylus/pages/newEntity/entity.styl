          }
        }
      }
    }
  }
  #entity-relate{
    width: 67%;
    height: 100%;
    .entity-title{
      position: relative;
      width: 100%;
      height: 7%;

      h4{
        position: absolute;
        top: 35%;
        left: 10%;
        transform: translate(-50%, 0);
        font-size: 16px;
        color: $font-color-highlight;
      }
      img{
        position: absolute;
        top: 24%;
        left: 10%;
        transform: translate(-50%, 0);
        width: 14%;
      }
      
    }
    .entity-topo{
      display: flex;
      height: 55%;

      .topo{
        width: 75%;
        height: 89%;
      }
      .topo-filter{
        display: flex;
        padding: 0 40px;
        overflow-x: hidden;
        overflow-y: auto;

        p{
          padding: 0 10px;
          margin: 5px;
          cursor: pointer;

          span{
            font-size: 18px;
            vertical-align: middle;
            margin: 0 5px;
          }
        }
        li{
          height: 26px;
          line-height: 26px;
          padding: 0 10px;
          margin: 5px;
          cursor: pointer;
        }
        
        .tab-choose{
          color: $icon-color-highlight;
        }
        .tab-choose span:before{
          color: $icon-color-highlight;
        }
      }
    }
    .linksTypeName:nth-child(1){
      font-size:18px;
    }
    .liborder{
      color: $tabs-item-color-border-active;
    }
    .entity-relateInfo{
      height: 38%;
      padding: 0 40px;
      
      .tabs{
        display: flex;
        p{
          height: 26px;
          line-height: 25px;
          border: 1px solid $tabs-item-vision-color-border;
          padding: 0 10px;
          margin: 5px;
          cursor: pointer;
        }
        .tab-choose{
          border: 1px solid $tabs-item-color-border-active;
        }
      }
      
      .tab-content{
        height: 80%;
        padding: 10px 20px;
        border: 1px solid $tabs-item-vision-color-border;
        margin-top: 10px;
        
        #time-filter{
          display: none;
          
          p{
            line-height: 22px;
            color: $font-color-highlight;
          }
          .filter-content{
            position: relative;
            
            .time-choose{
              width: 90px;
              line-height: 22px;
              text-indent: 8px;
              color: $input-color-text;
              background-color: $input-color-background;
              border: 1px solid $input-color-border;
              cursor: pointer;
            }
            .time-list{
                position: absolute;
                top: 24px;
                width: 90px;
                line-height: 22px;
                max-height: 100px;
                text-indent: 8px;
                background-color: $input-color-background;
                overflow-y: auto;
                cursor: pointer;
                z-index: 99;
                display: none;

                li:hover{
                  background-color: $select-alert-color-background-hover;
                }
              }
          }
        }
        .container-scroller{
          width: 100%;
          height: 90%;
          padding-bottom: 5px;
          overflow-x: auto;

          .container{
            display: flex;
            width: 100%;
            height: 100%;

            .trend_mes_box{
              height: 96%;
              margin-right: 10px;

              .trend_mes_title{
                height: 40%;

                .mes_time{
                  text-align: center;
                  font-size: 14px;
                  color: $font-color-highlight;
                  margin-bottom: 10px;
                }
                .bgline{
                  width: 100%;
                  height: 2px;
                  background: $enyity-color-section-border;
                }
                .icon-event_node{
                  display: block;
                  text-align: center;              
                  font-size: 38px;
                  margin: -10px 0;
                }
                .icon-hollow-circle{
                  display: block;
                  text-align: center;
                  margin: 10px 0;
                }
              }
              .trend_mes_content{
                height: 60%;
                padding: 10px;
                border: 1px solid $alert-border-color;
                border-radius: 5px;

                .trend_mes_content_box{
                  max-height: 74px;
                  overflow-y: auto;
                  padding-right: 10px;

                  p{
                    white-space: nowrap 
                  }
                }
              }
            }
          .icon-notfind{
            display: flex;
            justify-content: center;
            align-items: center;
            font-size: 80px;
            margin-left: 40%;
          }
          &>p{
            display: flex;
            justify-content: center;
            align-items: center;
            text-indent: 4em;
            font-size: 14px;
            color: $font-color;
          }
        }
        }
        
      }
    }
  }
  #entity-shade{
    position: fixed;
    top: 50px;
    right: 0;
    bottom: 0;
    left: 0;
    background-color: rgba(0,0,0,.6);
    z-index: 99;
    display: none;

    #entity-alert{
      position: absolute;
      top: 50%;
      left: 50%;
      transform: translate(-50%,-50%);
      width: 650px;
      height: 620px;
      font-size: 13px;
      padding: 30px 40px;
      background-color: $alert-color-background;
      border: 1px solid $alert-border-color;

      h4{
        font-size: 16px;
        color: $font-color-highlight;
        line-height: 2em;
        margin-bottom: 1em;
        text-align: left;
        border-bottom: 1px solid $alert-border-bottom-color;

        span{
          margin: 0 10px;
        }
        span:before{
          font-size: 18px;
          vertical-align: -2px;
          color: $font-color-highlight;
        }
      }
      .alert-content{
        width: 100%;
        height: 90%;
        overflow-x: hidden;
        overflow-y: auto;

        .tableStyle{
          width: 100%;

          p{
            width: 98%;
            height: 24px;
            line-height: 24px;
            border: 1px solid $table-color-border; 
            cursor: pointer;
            margin: 5px 0;
            padding: 0 20px;

            span{
              float: right;
              margin-top: 5px;
            }
          }
          
          table{
            width: 98%;
            background: $table-color-background;
            border: 1px solid $table-color-border;
            border-collapse: collapse;
            display: none;

            tbody{
              tr{
                td{
                  height: 24px;
                  border: 1px solid $table-color-border;
                  text-align: center;
                }
              }
              tr:nth-of-type(odd){
                background: $table-color-background-row-odd;
              }
            }
          }
        }
        .tableStyle:nth-of-type(even){
          p{
            background: $table-color-background-row-odd;
          }
        }
        .table-show{
          p{
            color: $font-color-highlight;
          }
          table{
            display: inline-table;
          }
        }
      }
      .alert-operate{
        position: relative;
        display: flex;
        flex-direction: row;
        height: 30px;
        margin: 20px 0;

        button{
          position: absolute;
          top: 50%;
          left: 50%;
          display: inline-block;
          height: 26px;
          margin-right: 20px;
          padding: 0 17px;
          color: $button-color-text;
          line-height: 26px;
          outline: 0;
        }
        .cancel{
          background: $button-color-background-cancel;
          border: 1px solid $button-color-border-cancel;
          margin-right: 0;
          transform: translate(-50%,-50%);
        }
        .cancel:hover{
          background-color: $button-color-background-cancel-hover;
        }
      }
    }
  }
}